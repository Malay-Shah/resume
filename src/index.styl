@import url('http://fonts.googleapis.com/css?family=Open+Sans:300,700|Roboto:300,400,700|Noto+Serif:400')

dark-grey = #555
section-header-size = 1.8em
main-font-size = 1em
title-size = 1.4em
primary-color = rgb(5, 51, 102)
resume-padding = 6px
resume-width = 1100px

body
  font-family: Roboto, Arial, sans-serif
  font-weight: 300
  background-color: #F6F6F6

.resume-container
  margin: 0 auto
  width: resume-width

.left-content
  float: left
  width: 28.5%
  margin-left: resume-padding

  .section-content
    font-weight: 300
  .title
    font-weight: 400
    margin-bottom: 0.5em
    color: primary-color

.right-content
  width: 68%
  margin-right: 2.5*resume-padding
  float: right

  .card
    border-left: none

p
  display: inline

a, #last-name
  color: primary-color
  text-decoration: none

#last-name
  margin-left: 0.2em

.email, .site, .github, .phone-number
  margin-top: 0.6em
  font-size: main-font-size

ul
  margin-top: 0em
  margin-bottom: 0em

.card
  background-color: #FEFEFE
  -webkit-box-shadow: 1px 1px 14px -5px rgba(0,0,0,0.5)
  -moz-box-shadow: 1px 1px 14px -5px rgba(0,0,0,0.5)
  box-shadow: 1px 1px 14px -5px rgba(0,0,0,0.5)
  border-radius: 2px
  margin-bottom: 15px
  border-left: thick solid primary-color

.header.card
  padding: 0px 15px 0px 20px
  margin-top: 15px
  margin-right: 2.5*resume-padding
  display: flex
  align-items: center
  justify-content: space-between

section.card
  padding: 15px 15px 22.5px 20px

.header
  font-family: 'Open Sans', Arial, sans-serif
  overflow: auto
  margin-left: resume-padding
  margin-right: 2*resume-padding

#skills-container
  margin-bottom: 0px

  .skill-items
    font-size: main-font-size

.skill
  font-family: Roboto, Arial, sans-serif
  font-size: title-size
  margin-bottom: 0.2em
  color: primary-color
  font-weight: 400

#name
  font-size: 3.8em
  font-weight: 500
  margin: 0.1em
  margin-top: 0.1em
  margin-bottom: 0.2em
  color: dark-grey
  float: left

.term
  font-size: 2.2em
  font-weight: 400
  color: black

.section-header
  margin-top: 0em
  font-family: 'Open Sans'
  color: primary-color
  font-weight: 500
  font-size: section-header-size

.section-content
  overflow: auto

.title
  font-family: Roboto, Arial, sans-serif
  font-size: title-size
  font-weight: 300
  margin-bottom: 0.2em

.duration
  font-family: Roboto, Arial, sans-serif
  font-weight: 300
  margin-top: 0.2em
  margin-bottom: 0.3em

.list
  list-style-type: none
  font-size: main-font-size

ul.list
  list-style-type: disc

ul.list li
  line-height: 135%
  margin-bottom: 0.2em

ul.list li:before
  display: inline-block
  width: 0px
  margin-left: 0px

.project, .employment, .education, .skills, .interests, .contact
  margin-top: 0.7em

.education-info .title
  font-size: 1.1em
  margin-bottom: 0.2em
  line-height: 130%

.project .title
  color: primary-color
  font-weight: 400

.employment-info
  margin: 1em 0

.employment .title
  color: primary-color
  font-weight: 400

.title
  display: flex
  justify-content: space-between
